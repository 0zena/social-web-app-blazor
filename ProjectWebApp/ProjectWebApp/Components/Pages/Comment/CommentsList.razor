@using Radzen.Blazor
@using Radzen


<RadzenStack>

    @if (Comments != null || Comments != default)
    {
        foreach (var comment in Comments)
        {
            <CommentsItem Id="comment.Id"/>
        }
    } 
    else 
    {
        <RadzenText>There is no comments yet</RadzenText>
    }

</RadzenStack>

