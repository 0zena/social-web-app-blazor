@using Radzen.Blazor
@using Radzen
@using Microsoft.IdentityModel.Tokens

<RadzenStack>

    @if (!Comments.IsNullOrEmpty())
    {
        foreach (var comment in Comments)
        {
            <CommentsItem Id="comment.Id"/>
        }
    } 
    else 
    {
        <RadzenText>There is no comments yet</RadzenText>
    }

</RadzenStack>

