@using Radzen.Blazor
@using Radzen

<EditForm Model="Model" OnValidSubmit="CreateComment" FormName="create-comment">
    <RadzenCard Variant="Variant.Outlined">
        <DataAnnotationsValidator />
        <div class="form-floating mb-3">
            <InputText @bind-Value="Model.Content" class="w-100 form-control" DisplayName="Write something..."/>
            <label>Write something...</label>
        </div>
        <ValidationMessage For="() => Model.Content"/>
        <RadzenButton Variant="Variant.Text" 
                      ButtonStyle="ButtonStyle.Primary" 
                      Text="Publish" 
                      ButtonType="ButtonType.Submit" 
                      class="mt-2"
                      title="Publish" />
    </RadzenCard>
</EditForm>