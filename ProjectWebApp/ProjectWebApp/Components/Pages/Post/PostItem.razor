@using ProjectWebApp.Data
@using ProjectWebApp.Models
@using Radzen.Blazor
@using Radzen

@inject ApplicationDbContext Context
@inject NavigationManager NavigationManager

<div class="card border-shadow-hover">
    <div class="card-body">
        <div class="btn-group">
            <h4 class="card-title overflow-hidden text-wrap">@Post.Title</h4>
        </div>
        <div class="card-text overflow-hidden text-wrap">@Post.Bio</div>
    </div>
</div>

@code {
    [Parameter] public Post Post { get; set; } = null!;
}