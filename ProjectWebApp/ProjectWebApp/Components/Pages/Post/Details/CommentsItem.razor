@using ProjectWebApp.Models
@using Radzen
@using Radzen.Blazor

<RadzenCard Variant="Variant.Flat">
    <RadzenText>@Comment.Content</RadzenText>
    
    <RadzenText>@Date</RadzenText>
</RadzenCard>

@code {
    [Parameter] 
    public Comment Comment { get; set; } = null!;

    private string Date => $"{Comment.Date.Month}.{Comment.Date.Day}";
}