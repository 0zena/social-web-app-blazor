@page "/"
<AuthorizeView>
    <NotAuthorized>
        <div class="container mt-4">
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <RadzenCard>
                        <div class="text-center">
                            <RadzenHeading Text="Welcome to Our Social Media Platform" />
                            <div class="mt-4">
                                <RadzenText>We're excited to have you here! Join us to connect with friends, share your knowledge, and explore what's happening around the tech world.</RadzenText>
                            </div>
                            <div class="mt-4">
                                <NavLink href="/Account/Register">
                                    <RadzenButton Text="Sign Up" Style="margin-right: 10px;" ButtonStyle="ButtonStyle.Primary"/>
                                </NavLink>
                                <NavLink href="/Account/Login">
                                    <RadzenButton Text="Log In" ButtonStyle="ButtonStyle.Secondary"/>
                                </NavLink>
                            </div>
                        </div>
                    </RadzenCard>
                </div>
            </div>
        </div>
    </NotAuthorized>
    <Authorized>
        <div class="container mt-4">
            <div class="row">
                <div class="col-md-3">
                    <RadzenCard>
                        <div class="sidebar">
                            <RadzenText class="text-break d-flex justify-content-center" 
                                        Text="@($"Welcome, {context.User.Identity?.Name!}")" />
                            <div class="d-flex justify-content-center">
                                <img src="https://via.placeholder.com/150" 
                                     class="img-fluid rounded-circle mb-3" 
                                     alt="User profile picture">
                            </div>
                            <NavLink href="/Account/Manage">
                                <RadzenButton Variant="Variant.Filled" 
                                              Shade="Shade.Lighter" 
                                              Text="Edit Profile" 
                                              class="w-100" />
                            </NavLink>
                        </div>
                    </RadzenCard>
                </div>
                <div class="col-md-6">
                    <RadzenCard>
                        <div class="feed">
                            <h5></h5>
                            <RadzenTextArea Placeholder="" Rows="3" Style="width: 100%;"></RadzenTextArea>
                            <button class="btn btn-primary mt-2"></button>
                        </div>
                    </RadzenCard>
                </div>
            </div>
        </div>
    </Authorized>
</AuthorizeView>
