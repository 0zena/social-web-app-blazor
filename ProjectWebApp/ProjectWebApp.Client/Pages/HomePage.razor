@page "/"
<AuthorizeView>
    <NotAuthorized>
        <div class="container mt-4">
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <RadzenCard>
                        <div class="text-center">
                            <RadzenHeading Text="Welcome to Our Social Media Platform" />
                            <div class="mt-4">
                                <RadzenText>We're excited to have you here! Join us to connect with friends, share your knowledge, and explore what's happening around the tech world.</RadzenText>
                            </div>
                            <div class="mt-4">
                                <NavLink href="/Account/Register">
                                    <RadzenButton Text="Sign Up" Style="margin-right: 10px;" ButtonStyle="ButtonStyle.Primary"/>
                                </NavLink>
                                <NavLink href="/Account/Login">
                                    <RadzenButton Text="Log In" ButtonStyle="ButtonStyle.Secondary"/>
                                </NavLink>
                            </div>
                        </div>
                    </RadzenCard>
                </div>
            </div>
        </div>
    </NotAuthorized>
    <Authorized>
        <div class="container mt-4">
            <div class="row">
                <div class="col-md-3">
                    <RadzenCard>
                        <div class="sidebar">
                            <RadzenText class="text-break" Text="@($"Welcome, {context.User.Identity?.Name!}")"></RadzenText>
                            <img src="https://via.placeholder.com/150" class="img-fluid rounded-circle mb-3" alt="User profile picture">
                            <button class="btn btn-primary w-100">Edit Profile</button>
                        </div>
                    </RadzenCard>
                </div>
                <div class="col-md-6">
                    <RadzenCard>
                        <div class="feed">
                            <h5>Create Post</h5>
                            
                            <RadzenTextArea Placeholder="What's on your mind?" Rows="3" Style="width: 100%;"></RadzenTextArea>
                            <button class="btn btn-primary mt-2">Post</button>
                        </div>
                    </RadzenCard>
                    <RadzenCard Class="mt-4" *ngFor="let post of posts">
                        <div class="post">
                            <div class="d-flex justify-content-between">
                            </div>
                            <div class="d-flex justify-content-between">
                                <button class="btn btn-outline-primary btn-sm">Like</button>
                                <button class="btn btn-outline-primary btn-sm">Comment</button>
                                <button class="btn btn-outline-primary btn-sm">Share</button>
                            </div>
                        </div>
                    </RadzenCard>
                </div>
                <div class="col-md-3">
                    <RadzenCard>
                        <div class="sidebar">
                            <h5>Suggested Friends</h5>
                            <ul class="list-unstyled">
                            </ul>
                        </div>
                    </RadzenCard>
                </div>
            </div>
        </div>
    </Authorized>
</AuthorizeView>
